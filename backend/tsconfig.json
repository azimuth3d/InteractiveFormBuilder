{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts"
  ],
  "lib": ["es6", "es2015.promise"],
  "exclude": [
    "node_modules"
  ]
}
